@model ToDoList.Models.nhanvien

@{
    ViewBag.Title = "StaffInFo";
    Layout = "~/Views/Shared/test.cshtml";
}

<div class="col-md-5 col-md-offset-3">
    <div class="panel">
        <div class="panel-heading" style=" background-color:#0fd14f; text-align:center; color:white;font-size:20px; ">

            <h3 class="panel-title">Thông tin nhân viên</h3>


        </div>
        <div class="panel-body" style=" width: auto; height: 500px;">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.nhanvien_id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.nhanvien_ten, "Tên nhân viên", htmlAttributes: new { @class = "col-md-8 col-md-offset-1" })
                        <div class="col-md-8 col-md-offset-1">
                            <input type="text" name="nhanvien_ten" class="form-control" style="width:350px" value="@Model.nhanvien_ten" required pattern="\S+.*" />
                            @Html.ValidationMessageFor(model => model.nhanvien_ten, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-8 col-md-offset-1">
                            @Html.LabelFor(model => model.nhanvien_gioitinh, "Giới tính", htmlAttributes: new { @class = "" })
                            @Html.LabelFor(model => model.nhanvien_ngaysinh, "Ngày sinh", htmlAttributes: new { @class = "col-md-offset-5" })


                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-5 col-md-offset-1">

                            <input type="text" name="nhanvien_gioitinh" id="text" class="form-control" style="width:150px" required pattern="\S+.*" value="@Model.nhanvien_gioitinh" />
                            @Html.ValidationMessageFor(model => model.nhanvien_gioitinh, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-offset-6">
                            <input type="date" name="nhanvien_ngaysinh" class="form-control" style="width:170px" required pattern="\S+.*" value="@Model.nhanvien_ngaysinh.Date.ToString("yyyy-MM-dd")" />

                            @Html.ValidationMessageFor(model => model.nhanvien_ngaysinh, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.nhanvien_cmnd, "CMND/CCCD", htmlAttributes: new { @class = "col-md-8 col-md-offset-1" })
                        <div class="col-md-8 col-md-offset-1">
                            <input type="number" name="nhanvien_cmnd" class="form-control" style="width:350px" required pattern="\d" value="@Model.nhanvien_cmnd" />
                            @Html.ValidationMessageFor(model => model.nhanvien_cmnd, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.nhanvien_email, "Email", htmlAttributes: new { @class = "col-md-8 col-md-offset-1" })
                        <div class="col-md-8 col-md-offset-1">
                            <input type="email" name="nhanvien_email" class="form-control" style="width:350px" required pattern="\S+.*" value="@Model.nhanvien_email" />
                            @Html.ValidationMessageFor(model => model.nhanvien_email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-8 col-md-offset-1">
                            @Html.LabelFor(model => model.nhanvien_matkhau, "Mật khẩu", htmlAttributes: new { @class = "" })
                            @Html.LabelFor(model => model.chucvu_id, "Chức vụ", htmlAttributes: new { @class = "col-md-offset-6" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-5 col-md-offset-1">

                            <input type="text" name="nhanvien_matkhau" id="text" class="form-control" style="width:190px" required pattern="\S+.*" value="@Model.nhanvien_matkhau" />
                            @Html.ValidationMessageFor(model => model.nhanvien_matkhau, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-offset-7">
                            <select name="chucvu_id" class="form-control">

                                <option value="@Model.chucvu_id">@Model.chucvu.chucvu_ten</option>

                            </select>
                        </div>


                    </div>

                    <div class="form-group">
                        <div class="col-md-7 col-md-offset-1">
                            <button type="submit" onclick="if(@ViewBag.MessageThem!=null) return window.alert('Xin chào!');" class="btn btn-default" style="width:240px; background-color:orange; color:white"><i class="fa fa-plus-square"></i>  Sửa nhân viên</button>
                        </div>
                        <div style="margin-left: 20px" class="col-md-offset-4"><a href="@Url.Action("Index", "NhanVien")"><button type="button" class="btn btn-danger" style="width:100px"><i class="fa fa-times-circle"></i> Hủy</button></a></div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>




