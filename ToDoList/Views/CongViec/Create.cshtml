@model ToDoList.Models.congviec

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/test.cshtml";


}

<h1></h1>
<h2></h2>

<div class="col-md-5 col-md-offset-3">
    <div class="panel">
        <div class="panel-heading" style=" background-color:#0fd14f; text-align:center; color:white;font-size:20px; ">
            <h3 class="panel-title">Thêm công việc</h3>
        </div>
        <div class="panel-body" style=" width: auto; height: 330px;">
            @using (Html.BeginForm(new { htmlAttributes = new { @class = "form-horizontal" } }))
            {
                @Html.AntiForgeryToken()

                //<h2>@TempData["ThanhCong"]</h2>
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.congviec_ten, "Tên công việc", htmlAttributes: new { @class = "col-md-8 col-md-offset-1" })
                        <div class="col-md-8 col-md-offset-1">
                            <input type="text" name="congviec_ten" class="form-control" style="width:350px" required pattern="\S+.*" />
                            @Html.ValidationMessageFor(model => model.congviec_ten, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-1">
                            @Html.LabelFor(model => model.congviec_ngaybatdau, "Ngày bắt đầu", htmlAttributes: new { @class = "" })
                            @Html.LabelFor(model => model.congviec_ngayketthuc, "Ngày kết thúc", htmlAttributes: new { @class = "col-md-offset-3" })

                            @Html.ValidationMessageFor(model => model.congviec_ngaybatdau, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-5 col-md-offset-1">
                            <input type="date" name="congviec_ngaybatdau" id="date" class="form-control" style="width:150px" required pattern="\S+.*" />
                        </div>
                        <div class="col-md-offset-6">
                            <input type="date" id="ngayKT" name="congviec_ngayketthuc" class="form-control" style="width:160px" required pattern="\S+.*" />

                            @Html.ValidationMessageFor(model => model.congviec_ngayketthuc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="hide">
                        @Html.LabelFor(model => model.congviec_ngayhoanthanh, "Ngày hoàn thành", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.congviec_ngayhoanthanh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.congviec_ngayhoanthanh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.phamvi_id, "Phạm vi", htmlAttributes: new { @class = "col-md-8 col-md-offset-1" })
                        <div class="col-md-8 col-md-offset-1">
                            @Html.DropDownList("phamvi_id", ViewBag.TenPhamVi as SelectList, htmlAttributes: new { @class = "form-control", @style = "width:350px" })
                            @Html.ValidationMessageFor(model => model.phamvi_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-md-7 col-md-offset-1">
                            <button type="submit" id="btnThem" class="btn btn-default" style="width:250px; background-color:orange; color:white"><i class="fa fa-plus-square"></i>  Thêm công việc</button>
                        </div>
                        <div style="margin-left: 20px" class="col-md-offset-4"><a href="@if (Session["MaNhanVien"] != null) {if (Int32.Parse(Session["MaNhanVien"].ToString()) == 1) { @Url.Action("Index", "NhanVien")} else {@Url.Action("Index", "CongViec") } } "><button type="button" class="btn btn-danger" style="width:100px"><i class="fa fa-times-circle"></i> Hủy</button></a></div>
                    </div>


                </div>

            }
        </div>
    </div>
</div>
