@model ToDoList.Models.nhanvien
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Login", "CongViec", FormMethod.Post, new { @class = "form-auth-small" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="signin-email" class="control-label sr-only">Tên đăng nhập</label>

        @Html.TextBoxFor(model => model.nhanvien_email, "", new { @class = "form-control", @placeholder = "Tên đăng nhập", @type = "email" })

    </div>
    <div class="form-group">
        <label for="signin-password" class="control-label sr-only">Mật khẩu</label>
        @Html.PasswordFor(model => model.nhanvien_matkhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
    </div>

    <div class="form-group clearfix">
        <label class="fancy-checkbox element-left">
            <input type="checkbox">
            <span>Remember me</span>
        </label>
    </div>
    <div class="form-group">
        <input type="submit" name="submit" class="btn btn-primary btn-lg btn-block" value="Login" />
    </div>
    <div class="bottom">
        <span class="helper-text"><i class="fa fa-lock"></i> <a href="#">Forgot password?</a></span>
    </div>
}




